<h1>Books</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
    <%= link_to book.title, "/books/#{book.id}" %>
  </span>
<% end %>

 

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %>