<div class=head>
<h1>Book</h1>

<table class="teble">
  <thead>
    <tr>
      <th class="header1">Title</th></th>
      <th class="header2">Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td> <%= book.title %></td>
      <td> <%= book.body %></td>
      <td> <%= link_to "Show", book_path(book.id) %></td>
      <td> <%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%# end %>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<% if @book.errors.any? %>
  <div class = error>
    <div class = er_text><%= @book.errors.count %>errors prohibited this book from being saved:</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Create Book' %>
  
<% end %>
</div>